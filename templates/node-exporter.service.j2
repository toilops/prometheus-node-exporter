[Unit]
Description=Prometheus Node Exporter Metric Application
After=network.target

[Service]
Type=simple
PIDFile=/var/run/node-exporter.pid
ExecStart=/opt/prometheus/bin/node_exporter
Restart=always
SyslogIdentifier=node-exporter
StandardOutput=syslog
StandardError=syslog

[Install]
WantedBy=multi-user.target